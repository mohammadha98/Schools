@using Schools.Application.Utilities
@using Schools.Domain.Repository.InterfaceRepository.Schools
@using Schools.Domain.Repository.InterfaceRepository.Users
@inject IUserRepository _user
@inject ISchoolRepository _School;

<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> بانک اطلاعاتی آموزشگاه ها </title>
    <meta name="googlebot" content="index,follow">
    <meta name="robots" content="noodp,noydir">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/css/material-icon.css">
    <link rel="stylesheet" type="text/css" href="/css/icon.css">
    <link rel="stylesheet" type="text/css" href="/css/intro.css">
    <link rel="stylesheet" type="text/css" href="/css/Custom.css">
    <script src="/js/jquery.min.js"></script>
</head>
<body>
    <script src="/js/modernizr.js"></script>
    <div class="loading">
        <div class="loading-body">
            <img src="/loading/Double Ring-1.4s-200px.gif" />
            <p>لطفا منتظر بمانید ...</p>
        </div>
    </div>
    <div class="main-content">
        <div class="container">
            <div class="top-bar">
                <div class="socials">
                    <a href=""><i class="icon-whatsapp"></i></a>
                    <a href=""><i class="icon-instagram"></i></a>
                    <a href=""><i class="icon-telegram"></i></a>
                    <a href=""><i class="icon-aparat"></i></a>
                </div>
                <div class="left-side">
                    <span><a href="javascript:void(0)" class="search-title"> جستجو در سایت </a><i class="zmdi zmdi-search"></i></span>
                    @if (User.Identity.IsAuthenticated)
                    {
                        var user = _user.GetUserById(User.GetUserId());
                        var isUserHasSchool = _School.IsUserHasASchool(User.GetUserId());
                        if (isUserHasSchool)
                        {
                            <div class="logged-in">
                                <a href="" class="avatar"><img src="/images/userAvatars/@user.UserAvatar" alt="عکس پروفایل کاربر"></a>
                                <span> @user.Name @user.Family خوش اومدی <i class="zmdi zmdi-caret-down"></i></span>
                                <div class="sublayer">
                                    <ul>
                                        <li><a href="/SchoolPanel"> مشاهده پروفایل </a></li>
                                        <li><a href="/SchoolPanel/Teachers"> مدرسین </a></li>
                                        <li><a href="/SchoolPanel/Courses"> دوره ها </a></li>
                                        <li><a href="/SchoolPanel/Edit"> ویرایش حساب کاربری </a></li>
                                        <li><a href="/SchoolPanel/ChangePassword"> تغییر رمز عبور </a></li>
                                        <li><a href="/Logout"> خروج از حساب کاربری </a></li>
                                    </ul>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="logged-in">
                                <a href="" class="avatar"><img src="/images/userAvatars/@user.UserAvatar" alt="عکس پروفایل کاربر"></a>
                                <span> @user.Name @user.Family خوش اومدی <i class="zmdi zmdi-caret-down"></i></span>
                                <div class="sublayer">
                                    <ul>
                                        <li><a href="/UserPanel"> مشاهده پروفایل </a></li>
                                        <li><a href="/UserPanel/Edit"> ویرایش حساب کاربری </a></li>
                                        <li><a href="/UserPanel/ChangePassword"> تغییر رمز عبور </a></li>
                                        <li><a href="/Logout"> خروج از حساب کاربری </a></li>
                                    </ul>
                                </div>
                            </div>
                        }

                    }
                    else
                    {
                        <span class=""><a href="/Login"> ورود  </a> / <a href="/Register"> عضویت </a><i class="zmdi zmdi-account"></i></span>
                    }
                </div>
            </div>
            <div class="main-menu">
                <a href="" class="logo"><img src="/images/logo.svg"></a>
                <nav>
                    <ul>
                        <li><a href="/Blog">وبلاگ</a></li>
                        <li><a href="">قوانین و شرایط</a></li>
                        <li><a href="">آموزش آنلاین</a></li>
                        <li><a href="/AboutUs">درباره ما</a></li>
                        <li><a href="/ContactUs">تماس با ما</a></li>
                    </ul>
                </nav>
                <span class="responsive-menu"><i class="zmdi zmdi-menu"></i></span>
                <a href="" class="submit-request"> ثبت آموزشگاه </a>
            </div>
            <div class="search-layer">
                <a href="javascript:void(0)" class="close-layer"><i class="zmdi zmdi-close"></i></a>
                <form action="" method="">
                    <select>
                        <option> انتخاب استان </option>
                        <option selected> استان تهران </option>
                        <option> استان تهران </option>
                        <option> استان تهران </option>
                        <option> استان تهران </option>
                        <option> استان تهران </option>
                        <option> استان تهران </option>
                        <option> استان تهران </option>
                    </select>
                    <select>
                        <option> انتخاب ناحیه </option>
                        <option> شهر تهران </option>
                        <option> شهر ری </option>
                    </select>
                    <input type="text" name="" placeholder="نام آموزشگاه ...">
                    <input type="text" name="" placeholder="نام دوره ...">
                    <button> جستجو کنید <i class="zmdi zmdi-search"></i></button>
                </form>
            </div>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="container">
            <nav>
                <ul>
                    <li><a href="">سوالات متداول</a></li>
                    <li><a href="">وبلاگ</a></li>
                    <li><a href="">قوانین و شرایط</a></li>
                    <li><a href="">آموزش آنلاین</a></li>
                    <li><a href="">درباره ما</a></li>
                    <li><a href="">تماس با ما</a></li>
                </ul>
            </nav>
            <p class="copyright"><a href="">طراحی</a> و <a href="">برنامه نویسی</a> و پشتیبانی : <a href="">شرکت برنامه نویسان پیشرو پایدار</a></p>
            <div class="clearfix"></div>
        </div>
    </footer>

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.slimscroll.js"></script>
    <script src="/js/intro.js"></script>
</body>
</html>
