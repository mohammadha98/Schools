<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title>  بانک اطلاعاتی آموزشگاه ها </title>
    <meta name="googlebot" content="index,follow">
    <meta name="robots" content="noodp,noydir">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/css/icon.css">
    <link rel="stylesheet" type="text/css" href="/css/public.css">
    <link rel="stylesheet" type="text/css" href="/css/Custom.css">
    @await RenderSectionAsync("Meta", false)

    <script src="/js/jquery.min.js"></script>

</head>
<body>
    <script src="/js/modernizr.js"></script>
    <div class="loading">
        <div class="loading-body">
            <img src="/loading/Double Ring-1.4s-200px.gif" />
            <p>لطفا منتظر بمانید ...</p>
        </div>
    </div>
    <div class="overlay"></div>
    <div class="top-layer">
        <div class="container">
            <!-- top bar -->
            <div class="top-bar">
                <div class="socials">
                    <a href=""><i class="icon-whatsapp"></i></a>
                    <a href=""><i class="icon-instagram"></i></a>
                    <a href=""><i class="icon-telegram"></i></a>
                    <a href=""><i class="icon-aparat"></i></a>
                </div>
                <div class="left-side">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="logged-in">
                            <a href="" class="avatar"><img src="/UserProfile/default.png"></a>
                            <span> @User.Identity.Name خوش اومدی <i class="zmdi zmdi-caret-down"></i></span>
                            <div class="sublayer">
                                <ul>
                                    <li><a href="/UserPanel/"> مشاهده پروفایل </a></li>
                                    <li><a href=""> ثبت آموزشگاه </a></li>
                                    <li><a href=""> ویرایش حساب کاربری </a></li>
                                    <li><a href=""> تغییر رمز عبور </a></li>
                                    <li><a href=""> خروج از حساب کاربری </a></li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <span class=""><a href="/Login"> ورود  </a> / <a href="/Register"> عضویت </a><i class="zmdi zmdi-account"></i></span>
                    }
                </div>
            </div>
            <!-- /top bar -->
            <!-- main menu -->
            <partial name="TopLayer/_MainMenu" />
            <!--/ main menu -->
        </div>

        <!-- fixed-menu -->
        <partial name="TopLayer/_FixMenu" />
        <!-- /fixed-menu -->

        <div class="container page-title">
            <h1><a href=""> حساب کاربری </a></h1>
            <ul itemtype="http://schema.org/BreadcrumbList" class="breadcrumb">
                <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"><a href="" itemprop="item"><span itemprop="name"> بانک اطلاعاتی آموزشگاه ها </span></a></li>
                <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"><a href="" itemprop="item" class="current"><span itemprop="name"> حساب کاربری آموزشگاه زبان آینده سازان  </span></a></li>
            </ul>
        </div>

    </div>
    @await RenderSectionAsync("Search", false)

<div class="account-layer">
    <div class="container">
        <!-- right side -->
        <div class="right-side">
            <!-- avatar -->
            <div class="quick-access layer-style">
                <div class="img-layer">
                    <a href="javascript:void(0)" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                    <img src="images/pic/avatar-1.jpg">
                </div>
                <div class="detail">
                    <h3> آموزشگاه زبان آینده سازان </h3>
                    <span> عضویت : 01/01/1395 </span>
                </div>
                <ul>
                    <li><a href="user-account.html" data-toggle="tooltip" data-placement="top" title="" data-original-title=" داشبورد "><i class="zmdi zmdi-settings"></i></a></li>
                    <li><a href="" data-toggle="tooltip" data-placement="top" title="" data-original-title=" ویرایش اطلاعات "><i class="zmdi zmdi-account-o"></i></a></li>
                    <li><a href="" data-toggle="tooltip" data-placement="top" title="" data-original-title=" تغییر رمز عبور "><i class="zmdi zmdi-lock-outline"></i></a></li>
                    <li><a href="" data-toggle="tooltip" data-placement="top" title="" data-original-title=" خروج از حساب "><i class="zmdi zmdi-power"></i></a></li>
                </ul>
            </div>
            <!-- /avatar -->
            <!-- side bar -->
            <section class="sidebar layer-style">
                <header><h3> منوی دسترسی </h3><i class="zmdi zmdi-chevron-down"></i></header>
                <div class="inner">
                    <ul>
                        <li>
                            <span> حساب کاربری من </span>
                            <ul>
                                <li><a href="account-1.html"> تکمیل اطلاعات و ثبت آموزشگاه  </a></li>
                                <li class="active"><a href="/UserPanel/Edit"> ویرایش حساب کاربری  </a></li>
                                <li><a href="account-3.html"> تنظیمات حساب کاربری  </a></li>
                                <li><a href="/UserPanel/EditPassword"> تغییر رمز عبور  </a></li>
                            </ul>
                        </li>
                        <li>
                            <span> مدیریت پروفایل </span>
                            <ul>
                                <li><a href="profile.html"> مشاهده پروفایل </a></li>
                                <li><a href="account-5.html"> مدیریت گالری تصاویر </a></li>
                                <li><a href="account-6.html"> مدیریت دوره ها </a></li>
                                <li><a href="account-7.html"> مدیریت اساتید </a></li>
                                <li><a href="account-8.html"> نظرات کاربران </a></li>
                                <li><a href="account-9.html"> پیام های خصوصی </a></li>
                            </ul>
                        </li>
                        <li><a href="account-10.html"> اطلاعیه های سیستم </a></li>
                        <li><a href="account-11.html"> تیکت و پشتیبانی </a></li>
                        <li><a href=""> خروج از سیستم </a></li>
                    </ul>
                </div>
            </section>
            <!-- /side bar -->
        </div>
        <!-- /right side -->
        <!-- left side -->
        <div class="left-side">
            <!-- account heading -->
            <div class="account-heading layer-style">
                <span class="status green"> وضعیت :  <i> فعال </i></span>
                <a href="submit-ticket.html"> <i class="zmdi zmdi-plus"></i> ثبت تیکت </a>
            </div>
            <!-- /account heading -->

            <div class="account-content-layer layer-style">
                @RenderBody()
            </div>
        </div>
        <!-- /left side -->
        <div class="clearfix"></div>
    </div>
</div>

    <partial name="_Footer" />

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.slimscroll.js"></script>
    <script src="/js/public.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>










