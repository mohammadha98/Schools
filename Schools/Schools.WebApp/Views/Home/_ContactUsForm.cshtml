@model Schools.Domain.Models.ContactUs.ContactUsForm

<form  asp-action="ContactUs" method="post" class="form-layer-style margin-b-35">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h2> فرم تماس با ما </h2>
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <!-- input -->
            <div class="input-layer">
                <label><i class="zmdi zmdi-account"></i>  نام و نام خانوادگی </label>
                <input asp-for="FullName" type="text">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <!--/ input -->
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <!-- input -->
            <div class="input-layer">
                <label><i class="zmdi zmdi-smartphone-android"></i>  شماره تماس </label>
                <input asp-for="PhoneNumber" type="text">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <!--/ input -->
        </div>
        <div class="col-md-6 col-sm-12 col-xs-12">
            <!-- input -->
            <div class="input-layer">
                <label><i class="zmdi zmdi-email"></i>  ایمیل </label>
                <input asp-for="Email" type="text">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <!--/ input -->
        </div>
        <div class="col-md-6 col-sm-12 col-xs-12">
            <!-- input -->
            <div class="input-layer">
                <label><i class="zmdi zmdi-texture"></i>  عنوان </label>
                <input asp-for="Subject" type="text">
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <!--/ input -->
        </div>
        <div class="col-xs-12">
            <!-- textarea -->
            <div class="textarea-layer">
                <label><i class="zmdi zmdi-assignment"></i>  توضیحات </label>
                <textarea asp-for="Description"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <!-- /textarea -->
        </div>

        <div class="col-md-3 col-sm-3 col-xs-12 pull-left">
            <button class="button-st green"> ارسال پیام  </button>
        </div>
    </div>
</form>