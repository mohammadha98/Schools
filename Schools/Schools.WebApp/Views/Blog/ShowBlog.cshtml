@model Schools.Domain.Models.Blogs.Blog
@using Schools.Application.Utilities.Convertors
@{
    ViewData["Title"] = "Index";
}
@section Topic_Layer{
    <div class="container page-title">
        <h1><a href=""> عنوان مطلب در این ناحیه قرار میگیرد </a></h1>
        <ul itemtype="http://schema.org/BreadcrumbList" class="breadcrumb">
            <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"><a href="" itemprop="item"><span itemprop="name"> بانک اطلاعاتی آموزشگاه ها </span></a></li>
            <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"><a href="" itemprop="item" class="current"><span itemprop="name"> عنوان مطلب در این ناحیه قرار میگیرد </span></a></li>
        </ul>
    </div>

}
@section Meta
{
    <link href="/css/page.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/css/material-icon.css">
}
<div class="container">
    <div class="page-default page-style-one">
        <div class="row">
            <!-- right -->
            <div class="col-lg-9 col-md-8 col-sm-12 col-xs-12">
                <!-- main content -->
                <section class="main-content shadow-style">
                    <header>
                        <div class="calendar-layer shadow-style">
                            @foreach (var item in Model.CreateDate.ToShamsiWithMount().Split())
                            {
                                <span>@item</span>
                            }
                        </div>

                        <h2><a href=""> @Model.Title </a></h2>
                        <div class="detail-layer">
                            <span><i class="zmdi zmdi-eye"></i> @Model.BlogVisit </span>
                            <a href="/blog"><i class="zmdi zmdi-rotate-left"></i> بازگشت به آرشیو مطالب </a>
                        </div>
                    </header>
                    <article>
                        <p>
                            @Model.ShortDescription
                        </p>
                        <p>
                            @Model.BlogText
                        </p>
                    </article>
                </section>
                <!-- /main content -->
                <!-- keywords -->
                <div class="tags-layer shadow-style">
                    @foreach (var item in Model.Tags.Split('-'))
                    {
                        <a href=""> @item </a>
                    }
                </div>
                <!-- /keywords -->
                <!-- comments -->
                <section class="user-comments-layer shadow-style">
                    <header> <h3> <i class="zmdi zmdi-comments"></i> نظرات کاربران </h3> <span> 28 نظر </span> </header>
                    <div class="comment-inner-layer">
                        <form asp-controller="Blog" asp-action="CreateComment"
                              data-ajax="true"
                              data-ajax-method="post"
                              data-ajax-mode="replace"
                              data-ajax-update="#listComment"
                              data-ajax-success="Success">
                            <input type="hidden" name="comment.BlogId" value="@Model.BlogId" />
                            <div class="row">
                                <div class="col-md-5 col-sm-5 col-xs-12">
                                    <input name="comment.Name" id="comment_Name" placeholder=" نام و نام خانوادگی" type="text">
                                    <input name="comment.Email" id="comment_Email" placeholder=" ایمیل " type="email">
                                    <input name="comment.PhoneNumber" id="comment_PhoneNumber" placeholder=" شماره تماس " type="text">
                                    <!-- here get comment id for reply , use this input's value and separate cm- -->
                                    <input name="commentId_CommentId" id="reply-comment-id" type="hidden">
                                </div>
                                <div class="col-md-7 col-sm-7 col-xs-12">
                                    <textarea id="comment_Comment" name="comment.Comment" placeholder=" متن نظر"></textarea>
                                    @*<div class="captcha">
                                            <input name="" placeholder=" کد امنیتی " type="text">
                                            <img src="images/pic/captcha.jpg">
                                        </div>*@
                                    <button type="submit"> ارسال نظر ارزشمند شما </button>
                                </div>
                            </div>
                        </form>

                        <div class="comments-list" id="listComment">

                        </div>

                        <!-- paging -->


                    </div>
                </section>
                <!-- /comments -->

            </div>
            <!-- /right -->
            <!-- left -->
            <aside class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
                <!-- category -->
                <form id="formFilter" asp-action="Index" method="get">
