@section Scripts{
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">

        function Success() {
            $("#comment_Comment").val("");
            $("#comment_Name").val("");
            $("#comment_Email").val("");
            $("#comment_PhoneNumber").val("");
        }

        $(function() {
            $("#listComment").load("/Blog/ShowComment/" + @Model.BlogId);
        });

        function pageComment(pageid) {
            $("#listComment").load("/Blog/ShowComment/" + @Model.BlogId+"?pageId="+pageid);
        }

        function changeGroup() {
            $("#formFilter").submit();
        }
    </script>
