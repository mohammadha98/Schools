@page "{ticketId}"
@using Schools.Application.Utilities
@using Schools.Application.Utilities.Convertors
@using Schools.Domain.Models.Schools
@using Schools.Domain.Repository.InterfaceRepository.Schools
@model Schools.WebApp.Pages.SchoolPanel.Tickets.ShowModel
@inject ISchoolRepository _school
@{
    var school = _school.GetSchoolByUserId(User.GetUserId());
    ViewData["title"] = $"تیکت و پشتیبانی";
}
@section Meta
{

    <link rel="stylesheet" type="text/css" href="/css/account.css">
}
@if (Model.UserTicket == null)
{

}
else
{

    @section Topic_Layer
{
        <div class="container page-title">
            <h1><a href="javascript:void(0)"> حساب کاربری </a></h1>
            <ul itemtype="http://schema.org/BreadcrumbList" class="breadcrumb">
                <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"><a href="/" itemprop="item"><span itemprop="name"> بانک اطلاعاتی آموزشگاه ها </span></a></li>
                <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement">
                    <a href="/SchoolPanel" itemprop="item">
                        <span itemprop="name"> حساب آموزشگاه @school.SchoolTitle </span>
                    </a>
                </li>
                <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement">
                    <a href="/SchoolPanel/Tickets" itemprop="item">
                        <span itemprop="name"> تیکت و پشتیبانی </span>
                    </a>
                </li>
                <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement">
                    <a href="javascript:void(0)" itemprop="item" class="current">
                        <span itemprop="name">@Model.UserTicket.TicketTitle</span>
                    </a>
                </li>
            </ul>
        </div>
    }
    <div class="account-layer">
        <div class="container">
            @{
                var menuModel = new Tuple<School, string>(school, "Tickets");
            }
            <partial name="Shared/_RightMenu" model="menuModel" />

            <div class="left-side">
                <!-- account heading -->
                <div class="account-heading layer-style">
                    <span class="status green"> وضعیت : <i> @(school.IsActive ? "فعال" : "غییر فعال") </i></span>
                    <a href="/SchoolPanel/Tickets/Add"> <i class="zmdi zmdi-plus"></i> ثبت تیکت </a>
                </div>
                <!-- /account heading -->

                <div class="account-content-layer layer-style">

                    <h3> @Model.UserTicket.TicketTitle </h3>
                    <div class="inner">
                        <div class="support-layer">
                            <div class="ticket-box answer">
                                <div class="head">
                                    <span class="code"> کد پیام : <i>@Model.UserTicket.TicketId</i> </span>
                                    <span class="resgiter-date"> تاریخ ثبت : <i>@Model.UserTicket.CreateDate.ToShamsi()</i> </span>
                                    <span class="status">
                                        وضعیت :
                                        @if (Model.UserTicket.TicketMessages.Any(t => t.IsSeen == false))
                                        {
                                            <i>پاسخ داده شده</i>
                                        }
                                        @if (Model.UserTicket.IsOpen == false)
                                        {
                                            <i>بسته شده</i>
                                        }
                                        @if (Model.UserTicket.IsOpen && Model.UserTicket.TicketMessages.All(m => m.UserId == User.GetUserId()))
                                        {
                                            <i>درحال برسی</i>
                                        }
                                    </span>
                                </div>
                                <div class="question">
                                    <p>
                                        @Html.Raw(Model.UserTicket.TicketMessage)

                                    </p>
                                </div>
                                <div class="answers">
                                    @foreach (var message in Model.UserTicket.TicketMessages)
                                    {
                                        <div class="@((message.UserId == User.GetUserId() ? "you" : "supporter"))">
                                            <span> تاریخ ثبت : @message.SendDate.ToShamsi() </span>
                                            @Html.Raw(message.MessageText)
                                        </div>
                                    }
                                    <form class="form-layer-style" method="post">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="textarea-layer">
                                                    <label><i class="zmdi zmdi-assignment"></i> متن پاسخ </label>
                                                    <textarea id="ticket_text" name="messageText"> </textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3 col-xs-12 pull-left">
                                                <button class="button-st green" type="submit"> <span> ثبت پیام </span> </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
}
@section Scripts
{

    <script src="/ckeditor5/build/ckeditor.js"></script>
    <script src="/js/CkeditorConfig.js"></script>
    <script src="/js/account.js"></script>

}
