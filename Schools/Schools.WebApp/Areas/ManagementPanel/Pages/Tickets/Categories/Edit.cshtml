@page "{categoryId}"
@model Schools.WebApp.Areas.ManagementPanel.Pages.Tickets.Categories.EditModel
@{
    ViewData["Title"] = "ویرایش دسته بندی تیکتت";
    var menuModel = "TicketsCategory";
}
<partial name="_MainMenu" model="menuModel" />


<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <section class="col-lg-12 col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">ویرایش  دسته بندی</h3>
                    </div>
                    <div class="box-body">
                        <form class="row" method="post">
                            <div class="col-lg-12">
                                <div class="text-danger" asp-validation-summary="All"></div>
                                <label>عنوان :</label>
                                <input type="text" asp-for="TicketCategory.CategoryTitle" required="" class="form-control" placeholder="عنوان را وارد کنید" />
                                <button type="submit" class="btn btn-primary" style="margin-top: 8px">ویرایش</button>

                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>

