@page
@using Schools.Application.Utilities.Convertors
@model Schools.WebApp.Areas.ManagementPanel.Pages.Users.IndexModel
@{

    var menuModel = "users";
}

<partial name="_MainMenu" model="menuModel" />

<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <section class="col-lg-12 col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <a href="/ManagementPanel/Users/Add" class="btn btn-success btn-flat">افزودن کاربر</a>
                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table-bordered table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>نام کاربری</th>
                                        <th>نام</th>
                                        <th>نام خانوادگی</th>
                                        <th>تاریخ ثبت نام</th>
                                        <th>عملیات ها</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach(var item in Model.usersForAdminPanelViewModel.GetUsers)
                                    {
                                        <tr>
                                            <td>@item.UserId</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Name</td>
                                            <td>@item.Family</td>
                                            <td>@item.RegisterDate.ToShamsi()</td>
                                            <td>
                                                <a class="btn btn-primary btn-sm" href="/ManagementPanel/Users/ShowProfile/@item.UserId">مشاهده پروفایل</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </section>
        </div>
    </section>
</div>