@page "{id}"
@using Schools.Application.Utilities.Convertors
@model Schools.WebApp.Areas.ManagementPanel.Pages.Users.ShowProfileModel
@{
    int id = int.Parse(RouteData.Values["id"].ToString());
    var menuModel = "users";
}
<partial name="_MainMenu" model="menuModel" />

<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <section class="col-lg-12 col-md-12">
                <div class="col-md-9">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">جدول جزییات کاربر</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>تاریخ ثبت نام :</th>
                                        <td>@Model.UserInfoView.User.RegisterDate.ToShamsi()</td>

                                    </tr>

                                    <tr>
                                        <th>نام :</th>
                                        <td>@Model.UserInfoView.User.Name</td>

                                    </tr>
                                    <tr>
                                        <th>نام خانوادگی :</th>
                                        <td>@Model.UserInfoView.User.Family</td>

                                    </tr>
                                    <tr>
                                        <th>نام کاربری :</th>
                                        <td>@Model.UserInfoView.User.UserName</td>

                                    </tr>
                                    <tr>
                                        <th>شماره همراه :</th>
                                        <td>@Model.UserInfoView.User.PhoneNumber</td>

                                    </tr>






                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">نقش های کاربر</h3>

                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body">
                            <ul>
                                @foreach (var item in Model.UserInfoView.userRoles)
                                {
                                    <li>@item</li>
                                }
                            </ul>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </section>
            <section class="col-lg-12 col-md-12">
                <div class="col-md-3">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">تصویر پروفایل</h3>

                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="center-block">
                                <img src="~/images/userAvatars/@Model.UserInfoView.User.UserAvatar" class="thumbnail" width="100%" />
                            </div>

                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">نشان های کاربر</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>نام آموزشگاه</th>
                                        <th>تصویر</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model.UserInfoView.Schools)
                                    {
                                        <tr>
                                            <td>@item.SchoolId</td>
                                            <td>@item.SchoolTitle</td>
                                            <td>
                                                <img class="thumbnail" style="max-width: 150px"  src="~/images/schools/@item.ImageName"/>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>