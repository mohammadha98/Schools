@page "{groupId}"
@model Schools.WebApp.Areas.ManagementPanel.Pages.Schools.Groups.EditModel
@{
    ViewData["Title"] = "افزودن گروه";
    var menuModel = "schoolsGroup";
}
<partial name="_MainMenu" model="menuModel" />


<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <section class="col-lg-12 col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">ویرایش  گروه</h3>
                    </div>
                    <div class="box-body">
                        <form class="row" method="post">
                            <div class="col-lg-12">
                                <label>عنوان :</label>
                                <input type="text" asp-for="GroupTitle" required="" class="form-control" placeholder="عنوان را وارد کنید" />
                                <button type="submit" class="btn btn-primary" style="margin-top: 8px">ویرایش</button>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>
