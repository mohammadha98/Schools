@page "{id}"
@model Schools.WebApp.Areas.ManagementPanel.Pages.Schools.Groups.EditModel
@{
    int id = int.Parse(RouteData.Values["id"].ToString());
    var menuModel = "schoolsGroup";
}

<partial name="_MainMenu" model="menuModel" />


<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <section class="col-lg-12 col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">ویرایش  گروه</h3>
                    </div>
                    <div class="box-body">
                        <form class="row" method="post">
                            <div class="col-lg-12">
                                <label>عنوان :</label>
                                <input type="text" asp-for="SchoolGroup.GroupTitle" required="" class="form-control" placeholder="عنوان را وارد کنید" />
                                <div class="checkbox">
                                    <input type="checkbox" asp-for="SchoolGroup.IsDelete"/> حذف این گروه
                                </div>
                                <button type="submit" class="btn btn-warning" style="margin-top: 8px">ویرایش</button>

                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>