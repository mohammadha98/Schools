@page
@model Schools.WebApp.Areas.ManagementPanel.Pages.Schools.Groups.IndexModel
@{
    ViewData["Title"] = "گروه های آموزشگاها";
    var menuModel = "schoolsGroup";
    // ManagementPanel/Schools
}

<partial name="_MainMenu" model="menuModel" />


<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <section class="col-lg-12 col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <form class="row">

                            <div class="col-lg-4 col-md-4" style="margin-top: 8px">
                                <button type="submit" class="btn btn-block btn-info">فیلتر</button>

                            </div>
                        </form>
                        <hr />
                        <a href="/ManagementPanel/Schools/add" class="btn btn-success btn-flat">افزودن آموزشگاه</a>

                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table-bordered table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>عنوان گروه</th>
                                        <th>زیر گروه ها</th>
                                        <td>عملیات ها</td>
                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var item in Model.List)
                                    {
                                        <tr>
                                            <td>@item.GroupId</td>
                                            <td>@item.GroupTitle</td>
                                            <td>
                                                @if (item.ParentId == null)
                                                {
                                                    <p class="text-danger">خالی</p>
                                                }
                                                else
                                                {

                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-info btn-sm">نمایش آموزشگاه های این گروه</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <div class="dataTables_paginate paging_simple_numbers text-center" id="example2_paginate">

                            <hr class="mt-0">

                            <ul class="pagination">

                                <li class="paginate_button previous disabled" id="example2_previous">
                                    <a onclick="ChangePage(1)">1</a>
                                </li>





                                <li class="paginate_button active">
                                    <a onclick="ChangePage(1)" href="javascript:void(0)">1</a>
                                </li>

                                <li class="paginate_button next" id="example2_next">
                                    <a onclick="ChangePage(10)">10</a>
                                </li>


                            </ul>

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>

