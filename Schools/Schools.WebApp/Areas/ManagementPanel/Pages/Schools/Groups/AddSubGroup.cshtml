@page "{id?}"
@model Schools.WebApp.Areas.ManagementPanel.Pages.Schools.Groups.AddSubGroupModel
@{
    int id = int.Parse(RouteData.Values["id"].ToString());
    Model.Id = id;
    var menuModel = "schoolsGroup";
}
<partial name="_MainMenu" model="menuModel" />


<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <section class="col-lg-6 col-md-6">

                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">افزودن زیر گروه</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">عنوان زیر گروه :</label>
                                <input type="text" asp-for="SchoolGroupsViewModel.GroupTitle" class="form-control" id="exampleInputEmail1" placeholder="عنوان را وارد کنید">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">انتخاب سر گروه :</label>
                                @if (Model.GroupName == "")
                                {
                                    <select asp-for="SchoolGroupsViewModel.GroupId" asp-items="ViewBag.Groups" class="form-control"></select>
                                }
                                else
                                {
                                    <select asp-for="SchoolGroupsViewModel.GroupId" disabled class="form-control">
                                        <option value="@id">
                                            @Model.GroupName
                                        </option>
                                    </select>
                                }


                            </div>
                            <div class="checkbox">
                                <label>
                                    <input asp-for="SchoolGroupsViewModel.IsDelete" type="checkbox"> حذف این گروه
                                </label>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">افزودن</button>
                        </div>
                    </form>
                </div>

            </section>

        </div>
    </section>
</div>