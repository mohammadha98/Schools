@page
@model Schools.WebApp.Areas.ManagementPanel.Pages.Blogs.Groups.DeleteModel
@{
    ViewData["Title"] = "حذف";
    var menuModel = "blogGroups";
}
<partial name="_MainMenu" model="menuModel" />



<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <section class="col-lg-12 col-md-12">

                <div class="box box-primary">
                    <h1>حذف گروه</h1>
                    <h2>آیا از حذف گروه{@Model.groups.GroupName} مطمئن هستید؟</h2>

                    <form method="post">
                        <input type="hidden" asp-for="groups.GroupId" />
                        <dl >
                            <dd><label asp-for="groups.GroupName"></label></dd>
                            <dt>
                                <input asp-for="groups.GroupName" class="form-control" readonly />
                                <span asp-validation-for="groups.GroupName"></span>
                            </dt>
                            <dd></dd>
                            <br />
                            <dt>
                                <input type="submit" class="btn btn-danger" value="حذف" asp-page="Delete"/>
                            </dt>
                        </dl>
                    </form>
                </div>
            </section>
        </div>
    </section>
</div>